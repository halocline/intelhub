<%- model_class = DataItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @data_item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_class_id) %>:</strong></dt>
  <dd><%= @data_item.data_class_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_source_id) %>:</strong></dt>
  <dd><%= @data_item.data_source_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              data_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_data_item_path(@data_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              data_item_path(@data_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
