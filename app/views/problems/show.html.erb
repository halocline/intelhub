<%- model_class = Problem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @problem.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:problem_class_id) %>:</strong></dt>
  <dd><%= @problem.problem_class.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:problem_roadmap_id) %>:</strong></dt>
  <dd><%= link_to @problem.problem_roadmap_id, roadmap_path(@problem.problem_roadmap_id) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              problems_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_problem_path(@problem), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              problem_path(@problem),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
