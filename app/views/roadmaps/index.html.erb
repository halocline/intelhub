<%- model_class = Roadmap -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:problem_id) %></th>
      <th><%= model_class.human_attribute_name(:required_resources) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @roadmaps.each do |roadmap| %>
      <tr>
        <td><%= link_to roadmap.id, roadmap_path(roadmap) %></td>
        <td><%= link_to roadmap.problem.name, problem_path(roadmap.problem) %></td>
        <td><%= roadmap.required_resources %></td>
        <td><%=l roadmap.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_roadmap_path(roadmap), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      roadmap_path(roadmap),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_roadmap_path,
            :class => 'btn btn-primary' %>
