<%= form_for @roadmap, :html => { :class => "form-horizontal roadmap" } do |f| %>

    <% if @roadmap.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@roadmap.errors.count, "error") %> prohibited this roadmap from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @roadmap.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :problem_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:problem_id, [1,2,3,4,5]) %>
    </div>
    <%= error_span(@roadmap[:problem_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :required_resources, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :required_resources, :class => 'form-control' %>
    </div>
    <%= error_span(@roadmap[:required_resources]) %>
  </div>
  <div class="control-group">
    <%= f.label :data_classes, :class => 'control-label' %>
    <div class="controls">
      <%=  %>
    </div>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            roadmaps_path, :class => 'btn btn-default' %>

<% end %>
