<%= form_for @question_instance, :html => { :class => "form-horizontal question_instance" } do |f| %>

    <% if @question_instance.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@question_instance.errors.count, "error") %> prohibited this question_instance from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @question_instance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :question_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :question_id, :class => 'form-control' %>
    </div>
    <%= error_span(@question_instance[:question_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@question_instance[:user_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            question_instances_path, :class => 'btn btn-default' %>

<% end %>
