<%- model_class = DataSource -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @data_source.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uri) %>:</strong></dt>
  <dd><%= @data_source.uri %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_file) %>:</strong></dt>
  <dd><%= @data_source.data_file %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @data_source.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              data_sources_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_data_source_path(@data_source), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              data_source_path(@data_source),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
