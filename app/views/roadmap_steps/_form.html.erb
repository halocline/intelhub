<%= form_for @roadmap_step, :html => { :class => "form-horizontal roadmap_step" } do |f| %>

    <% if @roadmap_step.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@roadmap_step.errors.count, "error") %> prohibited this roadmap_step from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @roadmap_step.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :roadmap_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :roadmap_id, :class => 'form-control' %>
    </div>
    <%= error_span(@roadmap_step[:roadmap_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :order, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :order, :class => 'form-control' %>
    </div>
    <%= error_span(@roadmap_step[:order]) %>
  </div>
  <div class="control-group">
    <%= f.label :step, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :step, :class => 'form-control' %>
    </div>
    <%= error_span(@roadmap_step[:step]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            roadmap_steps_path, :class => 'btn btn-default' %>

<% end %>
