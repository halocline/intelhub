<h1>Listing roadmap_data_classes</h1>

<table>
  <thead>
    <tr>
      <th>Roadmap</th>
      <th>Data class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roadmap_data_classes.each do |roadmap_data_class| %>
      <tr>
        <td><%= roadmap_data_class.roadmap_id %></td>
        <td><%= roadmap_data_class.data_class_id %></td>
        <td><%= link_to 'Show', roadmap_data_class %></td>
        <td><%= link_to 'Edit', edit_roadmap_data_class_path(roadmap_data_class) %></td>
        <td><%= link_to 'Destroy', roadmap_data_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

